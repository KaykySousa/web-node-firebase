<div class="min-vh-100 w-100 d-flex justify-content-center align-items-center p-4">
	<div class="max-w-64rem w-100">
		<header class="mb-4">
			<h1 class="display-5">Agendamentos</h1>
			<p class="lead">Sistema utilizado para agendamento de serviços.</p>
		</header>
		<main class="mb-3">
			{{#if schedules}}
				<div class="table-responsive">
					<table class="table table-striped table-hover table-bordered align-middle">
						<thead>
							<tr>
								<th>Nome</th>
								<th>Telefone</th>
								<th>Origem</th>
								<th>Data de Contato</th>
								<th>Observações</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{{#each schedules}}
								<tr>
									<td>{{name}}</td>
									<td>{{phone}}</td>
									<td class="text-capitalize">{{phoneType}}</td>
									<td>{{contactDate}}</td>
									<td class="max-w-16rem whitespace-pre-wrap">{{observations}}</td>
									<td class="d-grid gap-1">
										<a href="/update/{{id}}" class="btn btn-dark btn-sm">Editar</a>
										<a href="/delete/{{id}}" class="btn btn-dark btn-sm">Excluir</a>
									</td>
								</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			{{else}}
				<p class="lead fw-medium">Não foram encontrados agendamentos.</p>
			{{/if}}
		</main>
		<a href="/create" class="btn btn-dark">Novo Agendamento</a>
	</div>
</div>